<selection>
    {{#each services}}
    <div class="card mb-3" style="max-width: 1200px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="{{this.imagelink}}" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="{{this.h}}" class="btn btn-primary">Click Here</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
</selection>